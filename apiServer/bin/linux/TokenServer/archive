BASH=/bin/bash

echo 'start'

mkdir TokenServer 
mkdir TokenServer/bin
mkdir TokenServer/config
mkdir TokenServer/lib
mkdir TokenServer/doc

cp -rf fifoctl TokenServer/bin/
cp -rf bin/TokenServer TokenServer/bin/
cp -rf config/log.property TokenServer/config/
cp -rf config/sys.cfg TokenServer/config/
cp -rf config/whitelist.xml TokenServer/config/
cp -rf check_exist.sh TokenServer/
cp -rf doc/*.docx TokenServer/doc

cp /home/3rd-party/log4cxx/lib/liblog4cxx.so.10 TokenServer/lib
cp /home/3rd-party/boost/lib/libboost_system.so.1.55.0 TokenServer/lib
cp /home/3rd-party/boost/lib/libboost_thread.so.1.55.0 TokenServer/lib
cp /home/3rd-party/boost/lib/libboost_program_options.so.1.55.0 TokenServer/lib
cp /home/3rd-party/libevent-2.0.21/lib/libevent-2.0.so.5 TokenServer/lib
cp /home/3rd-party/json-c-0.9/lib/libjson.so.0 TokenServer/lib
cp /home/3rd-party/cryptopp/lib/libcryptopp.so TokenServer/lib
cp /home/3rd-party/boost/lib/libboost_regex.so.1.55.0 TokenServer/lib
cp /home/3rd-party/poco/lib/libPocoFoundation.so.16 TokenServer/lib
cp /usr/lib64/libaprutil-1.so.0 TokenServer/lib
cp /usr/lib64/libapr-1.so.0 TokenServer/lib

echo build date $1
tar -cjf TokenServer${1}.tar.bz2 TokenServer 

rm -rf TokenServer/

echo 'end'

