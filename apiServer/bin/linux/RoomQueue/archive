BASH=/bin/bash

echo 'start'

mkdir RoomQueue
mkdir RoomQueue/bin
mkdir RoomQueue/config
mkdir RoomQueue/lib
mkdir RoomQueue/doc

cp -rf bin/roomQueue RoomQueue/bin/
cp -rf config/log.property RoomQueue/config/
cp -rf config/sys.cfg RoomQueue/config/
cp -rf check_exist.sh RoomQueue/
cp -rf doc/*.docx RoomQueue/doc

cp /home/3rd-party/log4cxx/lib/liblog4cxx.so.10 RoomQueue/lib
cp /home/3rd-party/boost/lib/libboost_system.so.1.55.0 RoomQueue/lib
cp /home/3rd-party/boost/lib/libboost_thread.so.1.55.0 RoomQueue/lib
cp /home/3rd-party/boost/lib/libboost_program_options.so.1.55.0 RoomQueue/lib
cp /home/3rd-party/libevent-2.0.21/lib/libevent-2.0.so.5 RoomQueue/lib
cp /home/3rd-party/json-c-0.9/lib/libjson.so.0 RoomQueue/lib

echo build date $1
tar -cjf RoomQueue${1}.tar.bz2 RoomQueue

rm -rf RoomQueue/

echo 'end'

